{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "@playwright/test"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": [
    "playwright.config.ts",
    "config/**/*.ts",
    "fixtures/**/*.ts",
    "helpers/**/*.ts",
    "pages/**/*.ts",
    "api/**/*.ts",
    "data/**/*.ts",
    "tests/**/*.ts"
  ]
}
